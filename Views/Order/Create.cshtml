@model Order

<h1>Create Order</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Product</label>
        <select asp-for="Items[0].ProductId" asp-items="ViewBag.Products" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Quantity</label>
        <input type="number" asp-for="Items[0].Quantity" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Place Order</button>
</form>

@model IEnumerable<dynamic>

<h2>Categories List</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.NameSortParam">Name</a>
            </th>
            <th>Products Count</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.ProductCount</td>
            </tr>
        }
    </tbody>
</table>
